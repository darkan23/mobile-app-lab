<?xml version="1.0" encoding="utf-8"?><!-- Используется LinearLayout, а не ConstraintLayout, т.к. в ином случае длинное сообщение выходит за экран -->
<!--Frame for background and stroke padding-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popupAnchor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginStart="@dimen/padding_huge"
    android:layout_marginEnd="@dimen/padding_medium"
    android:layout_marginBottom="@dimen/padding_smaller"
    tools:ignore="RtlHardcoded,UselessParent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_shape"
            android:gravity="center_vertical"
            android:minHeight="36dp"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_marginEnd="@dimen/padding_medium_bigger"
                android:layout_marginBottom="@dimen/padding_small"
                android:gravity="start"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/padding_medium_bigger"
                android:textColor="@color/gray_225"
                tools:ignore="RtlSymmetry,SpUsage"
                tools:text="Тест 1 Тест 1 Тест 1 Тест 1 Тест 1 Тест 1 Тест Тест Тест Тест Тест  " />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/messageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_marginEnd="@dimen/padding_smaller"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/header_text_color"
            android:textSize="@dimen/font_smalle"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="RtlSymmetry,SpUsage"
            tools:text="22:33" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>
