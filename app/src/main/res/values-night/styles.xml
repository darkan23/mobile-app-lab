<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/gray_93</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSecondary">@color/dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/dark</item>
        <item name="colorSurface">@color/dark</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorControlActivated">@color/dark</item>
        <item name="android:windowBackground">@color/dark_dark</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:textViewStyle">@style/AppTextView</item>
        <item name="android:editTextStyle">@style/AppEditText</item>
        <item name="android:dialogTheme">@style/TextStoriesDialogTheme</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="toolbarStyle">@style/MyToolbarTheme</item>
        <item name="bottomNavigationStyle">@style/MyBottomNavigationTheme</item>
    </style>

    <style name="TextStoriesDialogTheme" parent="@style/BaseDialogTheme" />

    <style name="MyToolbarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/gray_225</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/toolbar_color</item>
        <item name="navigationIconTint">@color/toolbar_color</item>
    </style>

    <style name="MyBottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/colorPrimary</item>\
        <item name="itemIconTint">@color/bb_state_selector</item>
        <item name="itemTextColor">@color/bb_state_selector</item>
    </style>

    <style name="BaseDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:buttonBarButtonStyle">@style/BorderlessButtonCustom</item>
        <item name="android:windowBackground">@color/transparent_color</item>
        <item name="android:textViewStyle">@style/YodhaTextView</item>
    </style>

    <!--TextViews-->
    <style name="AppTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/font_main</item>
    </style>

    <style name="AppEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/font_main</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_shape</item>
    </style>

    <style name="BorderlessButtonCustom" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/design_color</item>
    </style>

    <style name="mainTextBig" parent="mainText">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="mainText">
        <item name="android:textColor">@color/gray_225</item>
        <item name="android:textSize">@dimen/font_main</item>
    </style>

    <style name="mainTextBold" parent="mainText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headerText" parent="mainText">
        <item name="android:textColor">@color/gray_128</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!-- Base TextView theme. -->
    <style name="YodhaTextView">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/gray_170</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:translationX">-1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:textColor">@color/header_black</item>
        <item name="android:textSize">@dimen/font_main</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ColoredControlEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/design_color</item>
    </style>

    <style name="AppTheme.TextStories">
        <item name="editTextStyle">@style/ColoredControlEditText</item>
    </style>

    <style name="BottomUpAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
    </style>

    <style name="BadgeMenu">
        <item name="android:background">@drawable/shapecount</item>
        <item name="android:backgroundTint">@color/gray_225</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/font_main</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MessageDate">
        <item name="android:background">@drawable/shape_message_date</item>
        <item name="android:backgroundTint">@color/background_message_date_color</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textColor">@color/gray_225</item>
        <item name="android:textSize">@dimen/font_main</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
