<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="titleTextColor">@color/toolbar_title_text_color</item>
        <item name="navigationIconTint">@color/icon_color</item>
        <item name="android:windowBackground">@color/gray_225</item>
        <item name="android:dialogTheme">@style/TextStoriesDialogTheme</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/AppTextView</item>
        <item name="android:editTextStyle">@style/AppEditText</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="TextStoriesDialogTheme" parent="@style/BaseDialogTheme" />

    <style name="BaseDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="android:buttonBarButtonStyle">@style/BorderlessButtonCustom</item>
        <item name="android:windowBackground">@color/transparent_color</item>
        <item name="android:textViewStyle">@style/YodhaTextView</item>
    </style>

    <!--TextViews-->
    <style name="AppTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_main</item>
    </style>

    <style name="AppEditText" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/font_main</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_shape</item>
    </style>

    <style name="BorderlessButtonCustom" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/design_color</item>
    </style>

    <style name="mainTextBig" parent="mainText">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="mainText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="mainTextBold"  parent="mainText">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Base TextView theme. -->
    <style name="YodhaTextView">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/gray_170</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:translationX">-1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/design_blue_margin</item>
        <item name="android:paddingEnd">@dimen/design_blue_margin</item>
        <item name="android:textColor">@color/header_black</item>
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ColoredControlEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/design_color</item>
    </style>

    <style name="AppTheme.TextStories">
        <item name="editTextStyle">@style/ColoredControlEditText</item>
    </style>

    <style name="BottomUpAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
    </style>

</resources>
